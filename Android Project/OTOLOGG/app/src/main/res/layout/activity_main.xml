<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Activitys.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_gravity="center"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/logoo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ara"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/textlayout"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/cars2" />

        <ImageView
            android:id="@+id/compareImg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/textlayout"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/cars3" />

        <Button
            android:id="@+id/Siralama"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/textlayout"
            android:padding="5dp"
            android:text="SIRALAMA"
            android:layout_marginBottom="5dp"
            android:textColor="#fff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/accountSettings"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/textlayout"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:text="Hesap Ayarları"
            android:textColor="#fff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/logOut"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/textlayout"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:text="ÇIKIŞ"
            android:textColor="#fff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/yoneticiIslemleri"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/textlayout"
            android:padding="5dp"
            android:text="YÖNETİCİ İŞLEMLERİ"
            android:textColor="#fff"
            android:textSize="25sp" />

    </LinearLayout>
</LinearLayout>