<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myPostsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfe6e9"
    android:orientation="vertical"
    tools:context=".Activitys.AdminPanel.ResimEkle">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/banner"
        android:gravity="center"
        android:textColor="#fff"
        android:text="Resim Ekle"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/resimEkleMarkaLogo"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/resimEkleMarka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/resimEkleModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/resimEkleList"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/resimEkleImg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/camera"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/resimEkleBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="Resimi YÃ¼kle"/>
        </LinearLayout>


    </ScrollView>




</LinearLayout>