<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myPostsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfe6e9"
    android:orientation="vertical"
    tools:context=".Activitys.AdminPanel.ResimDel">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/banner"
        android:gravity="center"
        android:textColor="#fff"
        android:text="Resim Sil"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/resimDelMarkaLogo"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/resimDelMarka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/resimDelModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25sp"/>
    </LinearLayout>

    <ListView
        android:layout_margin="10dp"
        android:id="@+id/resimDelList"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"></ListView>


</LinearLayout>